#############################################
#               API KEYS
#############################################

OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=
PINECONE_API_KEY=your-pinecone-api-key-here

#############################################
#               PINECONE CONFIG
#############################################

PINECONE_ENVIRONMENT=us-east-1
PINECONE_CLOUD=aws
PINECONE_INDEX_NAME=faq-support-bot
PINECONE_MEMORY_INDEX_NAME=conversation-memory
PINECONE_DIMENSION=1536
PINECONE_METRIC=cosine

#############################################
#               DATABASE CONFIG
#############################################

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=faq_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password

POSTGRES_MIN_POOL_SIZE=10
POSTGRES_MAX_POOL_SIZE=50

#############################################
#               REDIS CONFIG
#############################################

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

#############################################
#               LLM CONFIG
#############################################

LLM_PROVIDER=openai          # openai | anthropic
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

#############################################
#              EMBEDDINGS CONFIG
#############################################

EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

#############################################
#          DOCUMENT PROCESSING
#############################################

DEFAULT_CHUNK_SIZE=800
DEFAULT_CHUNK_OVERLAP=200
MAX_UPLOAD_SIZE_MB=50
DOCUMENT_FRESHNESS_DAYS=30

#############################################
#       MULTI-TIER MEMORY CONFIGURATION
#############################################

MAX_WORKING_MEMORY_TURNS=10
WORKING_MEMORY_TTL_SECONDS=3600

SESSION_MEMORY_TTL_SECONDS=86400
SESSION_SUMMARY_INTERVAL=10

USER_HISTORY_RETENTION_DAYS=90
USER_PROFILE_UPDATE_THRESHOLD=5

ENABLE_SEMANTIC_MEMORY=true
CONTEXT_WINDOW_SIZE=3

#############################################
#       RETRIEVAL CONFIGURATION
#############################################

RETRIEVAL_TOP_K=10
MIN_VECTOR_SCORE=0.5
HIGH_CONFIDENCE_VECTOR_SCORE=0.85

HYBRID_SEARCH_ENABLED=true
ENABLE_BM25_SEARCH=true
ENABLE_ENTITY_SEARCH=true
ENABLE_RERANKING=true
ENABLE_DIVERSITY_FILTER=true
ENABLE_QUERY_ENHANCEMENT=true
MAX_QUERY_EXPANSIONS=3

#############################################
#            RETRIEVAL WEIGHTS
#############################################

VECTOR_WEIGHT=0.6
BM25_WEIGHT=0.2
ENTITY_WEIGHT=0.1
RECENCY_WEIGHT=0.1

#############################################
#               RERANKING
#############################################

RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKING_TOP_K=20

#############################################
#             SEMANTIC CACHE
#############################################

SEMANTIC_CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_MAX_SIZE=10000

#############################################
#        CONFIDENCE & ESCALATION
#############################################

ESCALATION_THRESHOLD=0.6
ESCALATION_ENDPOINT=https://api.example.com/escalate
ESCALATION_TIMEOUT=10

#############################################
#         QUALITY & LEARNING
#############################################

ENABLE_QUALITY_SCORING=true
ENABLE_FEEDBACK_COLLECTION=true
FEEDBACK_LEARNING_ENABLED=true
